<?xml version="1.0"?>
<!DOCTYPE events>
<!-- This example document can be used for adjusting various things (money, favor, Rome wages, trade prices) at the start of the scenario based on the difficulty the player is playing on. 
    Keep in mind the money and favour changes happen over and above what the game will already adjust based on difficulty. 
    But you can also put in other changes, like trade price changes, or how much certain trade routes demand / supply for each difficulty. -->
<events version="1">
    <!-- Very easy -->
    <event>
        <condition type="time" check="eq" amount="0"/>
        <condition type="difficulty" check="eq" value="very_easy"/>
        <action type="favor" amount="10"/>
        <action type="money" amount="2000"/>
        <action type="savings" amount="500"/>
        <action type="rome_wages" amount="-2" set_to_value="false"/>
    </event>
    <!-- Easy -->
    <event>
        <condition type="time" check="eq" amount="0"/>
        <condition type="difficulty" check="eq" value="easy"/>
        <action type="favor" amount="5"/>
        <action type="money" amount="1000"/>
        <action type="savings" amount="200"/>
        <action type="rome_wages" amount="-1" set_to_value="false"/>
    </event>
    <!-- Normal -->
    <event>
        <condition type="time" check="eq" amount="0"/>
        <condition type="difficulty" check="eq" value="normal"/>
        <action type="savings" amount="100"/>
    </event>
    <!-- Hard -->
    <event>
        <condition type="time" check="eq" amount="0"/>
        <condition type="difficulty" check="eq" value="hard"/>
        <action type="money" amount="-1000"/>
        <action type="rome_wages" amount="1" set_to_value="false"/>
    </event>
    <!-- Very hard -->
    <event>
        <condition type="time" check="eq" amount="0"/>
        <condition type="difficulty" check="eq" value="very_hard"/>
        <action type="money" amount="-2000"/>
        <action type="rome_wages" amount="2" set_to_value="false"/>
    </event>
</events>